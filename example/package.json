{
	"name": "rpc-example",
	"displayName": "rpc-example",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.openwebview",
		"onCommand:extension.sendMessage"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.openwebview",
				"title": "Open Webview"
			},
			{
				"command": "extension.sendMessage",
				"title": "Send Message to Webview"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"copy": "rimraf ./out/media && copyfiles -u 1 ./src/media/** ./out/",
		"pretest": "npm run compile"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"copyfiles": "^2.1.1",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"rimraf": "^3.0.0",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"@sap-devx/webview-rpc": "0.2.1"
	}
}
