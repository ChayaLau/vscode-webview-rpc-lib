// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Run WebSocket Example",
			"program": "${workspaceFolder}/example-ws/out/index.js"
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/example"
			],
			"outFiles": [
				"${workspaceFolder}/example/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/example",
				"--extensionTestsPath=${workspaceFolder}/example/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/example/out/test/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		}
	]
}
