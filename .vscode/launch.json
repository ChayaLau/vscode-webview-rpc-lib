// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Tests",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceRoot}/node_modules/jest/bin/jest.js",
				"--runInBand"
			],
			"cwd": "${workspaceRoot}/out.test",
			"args": [
				"${workspaceRoot}/out.test/test/"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"port": 9229
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/example"
			],
			"outFiles": [
				"${workspaceFolder}/example/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/example",
				"--extensionTestsPath=${workspaceFolder}/example/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/example/out/test/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		}
	]
}